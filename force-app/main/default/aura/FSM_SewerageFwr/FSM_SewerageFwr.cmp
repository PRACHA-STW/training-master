<aura:component implements="force:lightningQuickAction,force:hasRecordId,flexipage:availableForAllPageTypes">
    <ltng:require styles="{!$Resource.fsmSewerageFwrDesktopStylesheet}"/>
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>

      
    <c:fsmSewerageFurtherWorkRequest recordId="{!v.recordId}"></c:fsmSewerageFurtherWorkRequest>
    <aura:html tag="style">  
    <!-- Media query for normal desktop devices -->
    @media screen and (min-width: 1285px) {
        .slds-modal__header{
            display:none !important;
        }
       
        .slds-modal__container {
            width: 80% !important;
            height: 115% !important;
            max-width: 100rem !important;
            margin-top: -10px;
        }        
        <!-- .slds-card__header{
            display: none !important;
        } -->
        .slds-modal__header .slds-modal__close {
            position: absolute;
            top: -2.5rem;
            right: -2.5rem;
            margin-left: 0;
            bottom: 0;
        }
        .wrapper-next.next-align{
            float: right !important;
        }
    }     
    
    <!-- Media query for tablets and mam unit screens -->
    @media screen and (min-width: 768px) and (max-width: 1285px) {
        .wrapper-next.next-align{
            float: right !important;
        }
        
        .slds-modal__header{
            display:none !important;
        }
        .slds-modal__container {
            width: 90% !important;
            height: 118% !important;
            max-width: 100rem !important;
            margin-top: -35px;
        }        
        
        <!-- .slds-card__header{
            display: none !important;
        } -->
        .find-nearby-main-container button.slds-combobox__input{
            width:100%;
            border: 1px solid #dddbda;
            -webkit-transition: border .15s linear;
            transition: border .15s linear;
            border-color: #dddbda;
            background-color: #fff;
            text-align: center;
            border-radius: .25rem;
        }
        .slds-p-around_medium, .slds-p-around--medium {
            padding: 0;
        }
        .slds-modal__header .slds-modal__close {
            position: absolute;
            top: -1.0rem;
            right: -2.5rem;
            margin-left: 0;
            bottom: 0;
        }
    
    }
    
    <!-- Media query for bigger desktop devices -->
    @media screen and (min-width: 1300px) {
        .slds-modal__header{
            display:none !important;
        }
        
        .slds-modal__content {
            height: auto !important;
            <!-- min-height: 500px; -->
        }
        .slds-modal__container {
            width: 60% !important;
            height: 110% !important;
            max-width: 100rem !important;
            margin-top: 0%;
        }       
        .wrapper-next.next-align{
            float: right !important;
        } 
        <!-- .slds-card__header{
            display: none !important;
        } -->
        .slds-modal__header .slds-modal__close {
            position: absolute;
            top: -2.5rem;
            right: -2.5rem;
            margin-left: 0;
            bottom: 0;
        }
    }         
</aura:html>
</aura:component>