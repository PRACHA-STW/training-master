<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>QuantityConsumedDecimalCheck</fullName>
    <active>true</active>
    <description>Created as part of SFI-1738</description>
    <errorConditionFormula>AND(
  NOT(ISBLANK(QuantityConsumed)),
  QuantityConsumed &lt;&gt; FLOOR(QuantityConsumed) 
)</errorConditionFormula>
    <errorDisplayField>QuantityConsumed</errorDisplayField>
    <errorMessage>QuantityConsumed value should not have decimals.</errorMessage>
</ValidationRule>
