<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>FSM_CheckForOpenMeasuringPoints</fullName>
    <active>true</active>
    <description>A work order can not be updated as completed with open measuring points.
SFS-4065</description>
    <errorConditionFormula>FSM_OpenMesuringPointsCount__c &gt; 0 &amp;&amp;  $Permission.FSM_MeasuringPointValdiation &amp;&amp; ISPICKVAL( Status , &apos;Completed&apos;)</errorConditionFormula>
    <errorDisplayField>Status</errorDisplayField>
    <errorMessage>Please action all measuring points.</errorMessage>
</ValidationRule>
