<?xml version="1.0" encoding="UTF-8"?>
<CustomField xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>FSM_InternalDueDate__c</fullName>
    <description>Internal Due Date</description>
    <formula>IF(ISPICKVAL(Status , &apos;New&apos;) ,DATEVALUE(DueDate) ,IF( DATEVALUE(DueDate) &lt;  TODAY() , TODAY()  + 7, DATEVALUE(DueDate)))</formula>
    <formulaTreatBlanksAs>BlankAsZero</formulaTreatBlanksAs>
    <label>Internal Due Date</label>
    <required>false</required>
    <trackHistory>false</trackHistory>
    <type>Date</type>
</CustomField>
