<apex:page controller="FSM_simpleSketchPDFCtr" renderAs="pdf" applyBodyTag="false" action="{!pdfAction}">
     <head>
          <!--renderAs="pdf"-->
        <style>
           @page {
             size: 1606px 960px;            
            }
            
            body {
                font-family: sans-serif;
                font-size: 10pt;
                
                 
            }
                        
            .parent {
              text-align: left;
              width: 1606px;
              height:840px;
            }
               
  
                       
            .child2 {
              display: inline-block;
            vertical-align: top;
            width: 1170px;
            border:1px solid black;
            }
            
            .child3 {
              border: 1px solid black;
              display: inline-block;
              vertical-align: top;
              width: 114px;
              height: 840px;
              text-align:center;
            }
              .child4 {
              display: inline-block;
              vertical-align: top;
              width: 238px;
              height:840px;
            }
      
        </style>
    </head>
    
    <body> 

        <div class="parent">
            <div class="child2">
                <div >
                    <apex:image value="/sfc/servlet.shepherd/version/download/{!contentId}" style="width: 1170px;height: 840px !important;"/> 
                </div> 
                
            </div> 
            
            <div class="child3">
                <div style="text-align: center; text-decoration:underline;"> Site Icons </div>
                  <apex:repeat value="{!siteIds}" var="sItem">
                    <apex:image value="/sfc/servlet.shepherd/version/download/{!sItem}" style="width: 110px; height: 60px !important;margin-left:1px; padding:1px;"/> 
                </apex:repeat> 
            </div> 
               <div class="child4">
                <apex:repeat value="{!photoIds}" var="pItem">
                    <div style="overflow:hidden;text-align: center;">
                    <apex:image value="/sfc/servlet.shepherd/version/download/{!pItem}" style=" max-width: 100%;height:135px  !important; padding:2px;object-fit: contain;"/>  <!-- 135px --> 
                    </div>
                </apex:repeat> 
              
            </div> 

            
        </div>
        

    </body> 
</apex:page>