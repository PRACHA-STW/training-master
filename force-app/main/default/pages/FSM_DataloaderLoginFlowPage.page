<apex:page controller="FSM_DataloaderLoginFlowPageCTR" showHeader="false" sidebar="false" action="{!FinishLoginFlowHome}">
    
    <style>
       
        .center-message {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            text-align: center;
            font-family: Arial, sans-serif;
            background-color: #f0f8ff; /* Light blue background */
        }

        .message-box {
            padding: 20px 40px;
            border: 2px solid #0070d2; /* Border with Salesforce blue color */
            border-radius: 10px;
            background-color: #ffffff; /* White background for contrast */
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .message-box h1 {
            font-size: 2rem;
            color: #333;
            margin-bottom: 10px;
        }

        .message-box p {
            font-size: 1.2rem;
            color: red;
        }

    </style>
    
    <apex:form >
        <div class="center-message">
            <div class="message-box">
                <apex:outputPanel >
                    <p> <b>Error: </b> Your profile is configured to login via dataloader. Please use this url to login (https://dataloader.io/)</p>
                </apex:outputPanel>
            </div>
        </div>
    </apex:form>
</apex:page>