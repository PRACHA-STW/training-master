<apex:page controller="FSM_simpleSketchPotraitPDFCtr" renderAs="pdf" applyBodyTag="false" action="{!pdfAction}">
     <head>
        <style>
              @page {
             size: 974px 955px;  
                  
            }
            
            body {
                font-family: sans-serif;
                font-size: 10pt;
                
            
                 
            }
                        
            .parent {
              text-align: left;
              width: 974px;
              height:840px;
                  
            }
               
  
                       
            .child2 {
              display: inline-block;
            vertical-align: top;
            width: 480px;
            height:840px;
            padding:0px;
            border: 1px solid black;
            
            }
            
            .child3 {
              border: 1px solid black;
              display: inline-block;
              vertical-align:top;
              width: 120px;
              height: 840px;
            }
              .child4 {
              display: inline-block;
              vertical-align: top;
              width: 238px;
              height:840px;
            }
        </style>
    </head>
    
    <body> 
       
        <div class="parent" style="page-break-after: avoid;">
            <div class="child2">
                <div >
                    <apex:image value="/sfc/servlet.shepherd/version/download/{!contentId}" style=" width: 480px;height: 840px; "/> 
                </div> 
                
            </div> 
            
          <div class="child3">
                <div style="text-align: center; text-decoration:underline;"> Site Icons </div>
                <apex:repeat value="{!siteIds}" var="sItem">
                    <apex:image value="/sfc/servlet.shepherd/version/download/{!sItem}" style=" width: 110px;height: 60px;margin-left:5px;"/> <br/>
                </apex:repeat>
            </div> 

            <div class="child4">
                <apex:repeat value="{!photoIds}" var="pItem">
                    <div style="overflow:hidden;text-align: center;">
                    <apex:image value="/sfc/servlet.shepherd/version/download/{!pItem}" style=" max-width: 100%;height: 135px !important; padding:5px;object-fit: contain;"/> 
                    </div>
                </apex:repeat> 
              
            </div>
         
        </div>
        

    </body> 
</apex:page>